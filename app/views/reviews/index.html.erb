<h4>Reviews list</h4>
<div>
	<%= link_to "New Review", new_review_path %>
</div>

<table class="table table_stripted">
			<th></th>
			<th>Author</th>
			<th>Reviewed</th>
			<th>Comment</th>
			<th>Rating</th>
			<th>Course</th>
	<% if @reviews %>
		<% @reviews.each do |r| %>
			<tr>
			  <td class="commenterImage">
          <%= image_tag r.author.picture if r.author %>
        </td>
				<td><%= r.author.name if r.author %></td>
				<td><%= r.reviewed.name if r.reviewed %></td>
				<td class="commentText"><%= r.comment %></td>
				<td><%= r.rating %></td>
				<td><%= r.course.name if r.course %></td>
				<% if admin %>
				<td>												
					<%= link_to "Edit", edit_review_path(r) %>										
					<%= link_to "Delete", review_path(r), method: :delete, data: { confirm: 'Are you sure?' } %>											
				<% end %>
				</td>			
			</tr>
		<% end %>
	<% end %>
</table>