
<% @users.each do |u| %>
	<% @user = u %>
	<div class="row">
		<div class="col-md-8">
			<div class="row">
				<div class="col-md-2">
				<%= image_tag u.picture, :class => "userImage"%>
				</div>
		   	<div class="col-md-10">
						<table class="table table_stripted">
							<thead class = "panel-heading">
								<tr>	
								<th><%= u.name %></th>
								<th><%= u.last_name %></th>
									<th>Town</th>
									<th>City</th>
									<th>region</th>
									<th>Country</th>	
									<th>website</th>
									<th>		
										<%= link_to "Show", user_path(u) %>
									</th>
									<% if admin %>
										<th>
										<%= link_to "Edit", edit_user_path(u) %>
										</th>
										<th>
											<%= link_to "Delete", user_path(u), method: :delete, data: { confirm: 'Are you sure?' } %>
										</th>
									<% end %>
								</tr>
							</thead>
							<tbody>
							<tr>
								<td></td>
								<td></td>
								<td><%= u.town %></td>
								<td><%= u.city.name if u.city %></td>
								<td><%= u.region.name if u.region %></td>
								<td><%= u.country.name if u.country %></td>		
								<td><%= u.website_url %></td>	
							</tr>
							</tbody>
						</table>
				</div>
			</div>
			<div class="row">
				<div class="col-md-2">
					<%= render 'show_categories' %>
				</div>
				<div class="col-md-10">
					<%=render 'show_description' %>
				</div>
			</div>
		</div> 
		<!-- end of col-8 -->
    <div class="col-md-4">			
   		<%= render 'show_reviews'%>
   		<%= render 'show_reviews_boots' %>
   	</div>

	</div>
<% end %>



