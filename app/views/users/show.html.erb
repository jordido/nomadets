<div class="panel-body">
	<table class="table table_stripted">
		<thead class = "panel-heading">
			<th><%= @user.type %></th>
			<th>First name</th>
			<th>Last name</th>
			<th>Email</th>
			<th>Address</th>
			<th>City</th>
			<th>Region</th>
			<th>Country</th>
			<th>Latitude</th>
			<th>Longitude</th>
			<th>Website</th>
		</thead>
		<tbody>
			<tr>
				<td><%= image_tag @user.picture, :class => "userImage"%></td>
				<td><%= @user.name %></td>
				<td><%= @user.last_name %></td>
				<td><%= @user.email %></td>
				<td><%= @user.address %></td>
				<td><%= @user.city.name if @user.city %></td>
				<td><%= @user.region.name if @user.region %></td>
				<td><%= @user.country.name if @user.country %></td>
				<td><%= @user.latitude %></td>
				<td><%= @user.longitude %></td>
				<td><%= @user.website_url %></td>
				<% if admin %>
				<td>
					<%= link_to "Edit", edit_user_path(u) %>
					<%= link_to "Delete", user_path(u), method: :delete, data: { confirm: 'Are you sure?' } %>
					</td>	
				<% end %>		
			</tr>
		</tbody>
	</table>
	<br/>
	<div>
		<%= @user.short_description %>
	</div>
<%= render '/users/show_description' %>
<%= render '/users/show_reviews' %>
<%= link_to "Back", users_path %>
</div>


