<%= form_for @search, url: search_users_path, method: :post do |s| %>
  <div class="form-group">
    <%= s.label :type %>
    <%= s.select :user_type, User::TYPES.collect{ |t| [t]}%>
  </div>
  <div class="form-group">
    <%= s.label :country_id %>
    <%= s.collection_select :country_id,  @countries,  :id, :name, {:prompt  => "Select a Country", :id => 'countries_select', :include_blank => true} if @countries %>
  </div>
  <div class="form-group">
    <%= s.label :region_id %>
    <%= s.collection_select :region_id, @regions, :id, :name, {:prompt   => "Select a Region", :id => 'regions_select', :include_blank => true}  %>
  <div class="form-group">
    <%= s.label :city_id %>
    <%= s.collection_select :city_id, @cities, :id, :name, {:prompt   => "Select a City", :id => 'cities_select', :include_blank => true} %>
  </div>
  <div class="form-group">
      <%= s.label :categories %>
      <%= s.collection_select :category_ids, Category.all, :id, :name, {}, { :multiple => true} %>
  </div>
  <div>
    <%= s.submit class: "btn btn-success"%>
  </div>
<% end %>
